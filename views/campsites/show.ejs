<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">CampChamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= campsite.image %>" alt="Camp Site Image" />
                <div class="caption-full">
                    <h4 class="pull-right">Rs.800/night</h4>
                    <h4><a href="#"><%= campsite.name %></a></h4>
                    <p><%= campsite.description %></p>
                    <p>
                        <em>Submitted By <%= campsite.author.username %></em>
                    </p>
                    <a class="btn btn-xs btn-warning" href="/campsites/<%= campsite._id %>/edit">Edit</a>
                    <form id="delete-form" action="/campsites/<%= campsite._id %>?_method=DELETE" method="post">
                        <button class="btn btn-xs btn-danger">Delete</button>
                    </form>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campsites/<%= campsite._id %>/comments/new">Leave a comment</a>
                </div>
                <hr>
                <% campsite.comments.forEach(function(comment) { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p><%= comment.text %></p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>
