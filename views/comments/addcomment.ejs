<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Add new comment to <%= campsite.name %></h1>
        <div style="width:30%; margin:35px auto;">
            <!-- form for adding new campsites -->
            <form action="/campsites/<%= campsite._id %>/comments" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Text">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[author]" placeholder="Author">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campsites">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
