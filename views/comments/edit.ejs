<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="jumbotron text-center">Edit Comment</h1>
        <!-- <h1 style="text-align:center;">Edit Comment</h1> -->
        <!-- <div style="width:30%; margin:35px auto;"> -->
            <!-- form for editing a comment -->
            <form action="/campsites/<%= campsite_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
                <div class="form-group col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                    <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                </div>
            </form>
            <a class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3" href="/campsites">Go Back</a>
        <!-- </div> -->
    </div>
</div>

