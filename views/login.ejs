<% include partials/header %>

<div class="container">
    <h1 class="jumbotron text-center">Login</h1>
    <div class="row">
        <form action="/login" method="POST">
            <div class="form-group col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <input class="form-control" type="text" name="username" placeholder="username" required="true">
            </div>
            <div class="form-group col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <input class="form-control" type="password" name="password" placeholder="password" required="true">
            </div>
            <div class="form-group col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <button class="btn btn-large btn-primary btn-block">Login</button>
            </div>
        </form>
        <a class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3" href="/campsites">Go Back</a>
    </div>
</div>

<% include partials/footer %>
